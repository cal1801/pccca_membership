<h1>Listing Memberships</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Fax</th>
      <th>Membership type</th>
      <th>Organization</th>
      <th>Url</th>
      <th>Valid year</th>
      <th>Payment date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.first_name %></td>
        <td><%= membership.last_name %></td>
        <td><%= membership.address1 %></td>
        <td><%= membership.address2 %></td>
        <td><%= membership.city %></td>
        <td><%= membership.state %></td>
        <td><%= membership.zipcode %></td>
        <td><%= membership.email %></td>
        <td><%= membership.phone_number %></td>
        <td><%= membership.fax %></td>
        <td><%= membership.membership_type %></td>
        <td><%= membership.organization %></td>
        <td><%= membership.url %></td>
        <td><%= membership.valid_year %></td>
        <td><%= membership.payment_date %></td>
        <td><%= link_to 'Show', membership %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

